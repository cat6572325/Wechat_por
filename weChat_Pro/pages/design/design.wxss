.item_style {
  margin: 5rpx;
  width: 130px;
  height: 190px;
  display: inline-block;
    margin-top: 25px;
  /*由于没有固定一行三个图，所以为了不太拉伸图片设置了图片的固定宽高*/  
}
.lower_part
{
    background-color: rgba(200, 200, 200, 0.5);
    height: 100%;
    min-height: 500px;
}

.image_style {
    width: 100%;
    height: 70%;
     border-top: 2px solid rgba(200, 200, 200, 0.6);
    border-left: 2px solid rgba(200, 200, 200, 0.6);
    border-right: 2px solid rgba(200, 200, 200, 0.6);
    border-bottom: 2px solid rgba(200, 200, 200, 0.6);

    border-radius: 3.5%;
     /*box-shadow:-10px 15px 10px rgba(200, 200, 200, 0.5), /左边阴影  
    10px 15px 10px rgba(200, 200, 200, 0.5), /右边阴影  
    0 -10px 10px rgba(200, 200, 200, 0.2), /顶部阴影  
    0 25px 25px rgba(200, 200, 200, 0.3); 底边阴影*/
}
.name_style
{
    float: left;
    margin-top: 20px;
    width: 100%;
    text-align: center;
}

.title_style
{
    width: 100%;
    height: 100px;

}
.title_style_text
{
    text-align: right;
    float: left;
    width: 60%;
    margin-top: 30px;
}
.total_text
{
    float: left;
    width: 30%;
    color: #ccc;
    margin-top: 30px;
    margin-left: 10px;

}

